import random

#word list for hangman
word_list = ['apple', 'penis', 'watermelon', 'moist', 'onomatopoeia', 'fellatio']

random_word = random.choice(word_list)

user_name = input("Welcome to Hangman. Please enter your name: ")

print ("Hello " + user_name + "!")

word_length = len(random_word)
blanks = "_ " * len(random_word)

print ("Your word has " + str(word_length) + " letters.")
print (blanks)
word = []
not_in_word = []
#add blanks for word length?

guess_count = range(1, 100)

def check(num):
    print ("Possible letters: " + str(word))
    print ("Incorrect letters: " + str(not_in_word))
    guess = input("Guess a letter: ")
    if guess in word:
        print ("You've already guessed that letter!")
    else:
        if guess in random_word:
            print ("Good guess! Your word has the letter " + str(guess) + ".")
            word.append(guess)
        else:
            not_in_word.append(guess)
            print ("Sorry, try again.")

for x in guess_count:
    if len(word) == len(random_word):
        print ("You've guessed all the letters!")
        print ("Possible letters: " + str(word))
        break
    else:
        check(guess_count)
    
